<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <android.support.v7.widget.CardView
        android:id="@+id/cardView"
        android:background="@drawable/circle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:backgroundTintMode="@color/offWhite"
        android:backgroundTint="@color/offWhite"
        android:layout_marginStart="@dimen/cardview_compat_inset_shadow"
        android:layout_marginLeft="@dimen/cardview_compat_inset_shadow"
        android:layout_marginEnd="@dimen/cardview_compat_inset_shadow">


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="7dp"
            android:background="@color/offWhite">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/mobile_image"
                    android:layout_width="100dp"
                    android:layout_height="150dp"
                    android:layout_margin="3dp"
                    android:backgroundTintMode="@color/google"
                    android:src="@drawable/pic" />
                <TextView
                    android:layout_width="wrap_content"
                    android:id="@+id/score"
                    android:layout_height="wrap_content"
                    android:background="@drawable/circle"
                    android:gravity="center"
                    android:layout_marginStart="0dp"
                    android:text="score"
                    android:textAlignment="center"
                    android:textSize="12sp"
                    android:layout_below="@+id/mobile_image"/>

            </LinearLayout>


            <TextView
                android:id="@+id/title"
                android:layout_width="154dp"
                android:layout_height="52dp"
                android:layout_marginStart="118dp"
                android:layout_marginTop="10dp"
                android:gravity="bottom"
                android:text="TextView"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/our_rating"
                android:layout_width="70dp"
                android:layout_height="60dp"
                android:layout_marginStart="12dp"
                android:layout_marginTop="2dp"
                android:layout_marginRight="2dp"
                android:layout_toEndOf="@+id/title"
                android:background="@drawable/oval"
                android:gravity="center"
                android:text="75"
                android:textAlignment="center"
                android:textSize="20sp" />

            <LinearLayout
                android:id="@+id/linearLayout"
                android:layout_width="257dp"
                android:layout_height="140dp"
                android:layout_marginStart="108dp"
                android:layout_marginTop="61dp"
                android:layout_marginEnd="7dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/walmart_text"
                    android:layout_width="match_parent"
                    android:layout_height="42dp"
                    android:gravity="fill"
                    android:layout_marginLeft="10dp"
                    android:text="TextView"
                    android:textSize="15sp" />

                <View
                    android:id="@+id/divider"
                    android:layout_width="match_parent"
                    android:layout_height="3dp"
                    android:layout_weight="0"
                    android:layout_marginLeft="10dp"
                    android:background="@color/google" />

                <TextView
                    android:id="@+id/flipkart_text"
                    android:layout_width="match_parent"
                    android:layout_height="42dp"
                    android:gravity="fill"
                    android:text="TextView"
                    android:layout_marginLeft="10dp"
                    android:textSize="15sp" />

                <Spinner
                    android:id="@+id/price"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColorHint="#05ab9a" />
            </LinearLayout>
        </RelativeLayout>
    </android.support.v7.widget.CardView>
</RelativeLayout>